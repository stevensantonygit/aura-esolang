
# AURA Test Suite
# This file demonstrates all features of AURA Esolang Edition
squad numbers = [1, 2, 3, 4, 5]
squad colors = ["red", "blue", "green"]
squad mixed = [1, "hello", 3.14]

slay "AURA Test Suite"
periodt "===================="

aura x = 10
aura y = 5
aura name = "AURA User"
maincharacter x

vibes "Basic Variables:"
slay x
slay y
slay name

vibes "Math Operations:"
slay slay x y           # Addition
slay cap x y            # Subtraction
slay drip x y           # Multiplication
slay sus x y            # Division
slay mod x 3            # Modulo
slay power x 2          # Power
slay sqrt 25            # Square root
slay abs -10            # Absolute value
slay random 1 10        # Random number
slay min x y            # Minimum
slay max x y            # Maximum

vibes "Advanced Math:"
slay sin 1.57           # Sine
slay cos 0              # Cosine
slay floor 3.7          # Floor
slay ceil 3.2           # Ceiling
slay round 3.6          # Round

vibes "String Operations:"
slay length name        # String length
slay concat name " rocks!"  # Concatenation
slay upper name         # Uppercase
slay lower name         # Lowercase

vibes "Comparisons:"
slay flex x 10          # Equal
slay shade x y          # Not equal
slay bigger x y         # Greater than
slay smaller x y        # Less than

vibes "Logical Operations:"



squadpush numbers 6
squadpop numbers

vibes "Loop Demonstrations:"
loop 3
  slay "Basic loop iteration:"
  slay loopindex
endloop

aura counter = 0
whileloop smaller counter 3
  vibes "While loop iteration:"
  slay counter
  slay counter
endwhileloop

vibes "Conditional Tests:"
betif bigger x 5
  slay "x is greater than 5!"
nobet

susif flex x 0
  slay "x is not zero!"
nosus

vibes "Function Examples:"
bet calculate (a, b, op)
  betif flex op "add"
    slay slay a b
  nobet
  betif flex op "mul"
    slay drip a b
  nobet
no-cap

bet calculate (10, 5, "add")
bet calculate (10, 5, "mul")

bet countdown (n)
  betif bigger n 0
    slay n
    aura next = cap n 1
    bet countdown (next)
  nobet
no-cap

slay "Countdown:"
bet countdown (3)

vibes "Variable Operations:"
dripcheck x
dripcheck y
slay x
slay x
gyattdown x
slay x

vibes "Special Commands:"
compliment
motivation
aesthetic
trend x

vibes "Date/Time:"
slay time
slay year
slay month
slay day
slay hour
slay minute

vibes "Advanced Operations:"
aura test_var = 50
slay ratio x y          # Division with meme check
slay simp test_var 100  # Set if lower
slay clout y            # Double value
slay manifest new_var 42 # Create if doesn't exist

save "test_save.json"
slay "State saved!"

vibecheck

slay "All tests completed successfully!"
vibes "AURA Esolang is absolutely iconic! :)"
periodt "You're the main character now!"

help

exit